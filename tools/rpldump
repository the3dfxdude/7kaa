	$MSG_SEND_TALK_MSG,
	$MSG_REPLY_TALK_MSG,
	$MSG_NATION_CONTACT,
	$MSG_NATION_SET_SHOULD_ATTACK,
	$MSG_CHAT,

	$MSG_COMPARE_NATION,
	$MSG_COMPARE_UNIT,
	$MSG_COMPARE_FIRM,
	$MSG_COMPARE_TOWN,
	$MSG_COMPARE_BULLET,
